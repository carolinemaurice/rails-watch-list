<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to "New bookmark", new_list_bookmark_path(@list), class:"btn btn-flat" %>
  </div>
</div>


<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
      <img src=<%= bookmark.movie.poster_url %> />
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <div class="d-flex justify-content-between">
          <p><%= bookmark.movie.overview %></p>
          <p><strong><%= bookmark.movie.rating %></strong></p>
        </div>
        <div class="d-flex justify-content-between">
          <p><%= bookmark.comment %></p>
          <p><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
